<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="XML" injector-id="xml">
      <display-name>project</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("project")).withNamespace(string().equalTo("http://maven.apache.org/POM/4.0.0"))]]></place>
    </injection>
    <injection language="ThymeleafExpressions" injector-id="xml">
      <display-name>tr</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("tr")).withNamespace(string().equalTo("http://www.w3.org/1999/html"))]]></place>
    </injection>
  </component>
</application>